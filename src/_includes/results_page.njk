<section class="results">
    <div class="hero">
        <p class="leading_copy">Thanks for taking the quiz!</p>
        <img src="https://fs.hubspotusercontent00.net/hubfs/2661559/Teneo/Work%20from%20Anywhere%20-%20Lie%20Detector/results-detector.png" class="desktop">
        <img src="https://fs.hubspotusercontent00.net/hubfs/2661559/Teneo/Work%20from%20Anywhere%20-%20Lie%20Detector/results-detector-mobile.png" class="mobile">
        <h2 class="heading">
            <span class="text">{{ content.resultsPage.hero | safe }}</span>
        </h2>
        <h3 class="subheading">{{ content.resultsPage.subheading | safe }}</h3>
    </div>
    <div class="blog_post with_image">
        <picture class="mobile">
            <img src="https://fs.hubspotusercontent00.net/hubfs/2661559/Teneo/Work%20from%20Anywhere%20-%20Lie%20Detector/priscilla-du-preez-OEdkPaxYMXU-unsplash%201.png" alt="woman smiling">
        </picture>
        <article>
            <p class="leading_copy">{{ content.resultsPage.component_two_leading_copy | safe }}</p>
            <h3 class="heading">{{ content.resultsPage.component_two_heading | safe }}</h3>
            <h4 class="subheading">{{ content.resultsPage.component_two_subheading | safe }}</h4>
            <p class="body">{{ content.resultsPage.component_two_body | safe }}</p>
            <div class="cta_container">
                <a href="{{ content.resultsPage.component_two_cta_one_link | safe  }}" target="_blank" class="cta primary"><span class="text">{{ content.resultsPage.component_two_cta_one | safe }}</span></a>
                <a class="toggle_form cta link"> {{ content.resultsPage.component_two_cta_two | safe }} </a>
            </div>
        </article>
        <picture class="desktop">
            <img src="https://fs.hubspotusercontent00.net/hubfs/2661559/Teneo/Work%20from%20Anywhere%20-%20Lie%20Detector/priscilla-du-preez-OEdkPaxYMXU-unsplash%201-1.png" alt="woman smiling">
        </picture>
    </div>
    <div class="blog_post alt">
        <article>
            <h3 class="heading">{{ content.resultsPage.component_three_heading | safe }}</h3>
            <p class="body">{{ content.resultsPage.component_three_body | safe }}</p>
            <div class="cta_container">
                <a href="{{ content.resultsPage.component_three_cta_one_link }}" target="_blank" class="cta primary">
                    <span class="text">{{ content.resultsPage.component_three_cta_one | safe }}</span>
                    <svg width="11" height="12" viewBox="0 0 11 12" fill="none" style="margin-top: 4px;" xmlns="http://www.w3.org/2000/svg">
                        <path d="M0.550253 1.05021H10.4497M10.4497 1.05021V10.9497M10.4497 1.05021L0.550253 10.9497" stroke="#002858"/>
                    </svg>
                </a>
            </div>
        </article>
    </div>
    <div class="banner">
        <div class="vert-container">
            <h3 class="heading">Take the test again</h3>
            <div class="cta_container">
                <a href="#reset-quiz" class="cta ghost"><span class="text">Back to test</span></a>
            </div>
        </div>
    </div>
    <footer>
        <nav>
        {% if content.navigation_links %}
            {% for link in content.navigation_links %}
            <a href="{{ link.url }}" target="_blank">{{ link.copy }}</a>
            {% endfor %}
        {% endif %}
        </nav>
    </footer>
</section>